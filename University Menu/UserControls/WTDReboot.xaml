<UserControl x:Class="University_Menu.UserControls.WTDReboot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:University_Menu.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
    <Grid>
        <Expander>
            <Expander.Header>
                <StackPanel>
                    <TextBlock Name="wtdTitle" Text="What can be done now?" FontWeight="Bold" TextWrapping="Wrap"></TextBlock>
                </StackPanel>
            </Expander.Header>
            <StackPanel>
                <CheckBox Name="checkConfirm" Margin="0,10,4,0" Click="checkConfirm_Click">
                    <AccessText Name="textConfirm" TextWrapping="Wrap" Text="I have save all my documents and close all my programs"/>
                </CheckBox>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Name="buttonNow" IsEnabled="False" Content="Restart now" Click="buttonNow_Click" />
                </StackPanel>
            </StackPanel>
        </Expander>
    </Grid>
</UserControl>
