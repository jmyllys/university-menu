<UserControl x:Class="University_Menu.UserControls.SupportAttachments"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:University_Menu.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Expander Name="expanderAttachments" Margin="0,9,0,0" Drop="expanderAttachments_Drop">
            <Expander.Header>
                <StackPanel>
                    <TextBlock Name="attachmentCount" Text="No attachments selected"></TextBlock>
                </StackPanel>
            </Expander.Header>
            <StackPanel Orientation="Horizontal">
                <Button Margin="0,10,0,0" Name="buttonAdd" Click="buttonAdd_Click">Insert an attachment</Button>
                <Button Margin="15,10,0,0" Name="buttonClear" IsEnabled="False" Click="buttonClear_Click">Remove attachments</Button>
            </StackPanel>
        </Expander>
    </Grid>
</UserControl>
